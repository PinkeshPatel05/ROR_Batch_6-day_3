
<%#<p style="color: green"><%= notice %><%# </p>%>
<h1>Tasks</h1>
<table class="table table-striped table-bordered">
<thead class="table-dark">
<tr>
<th>Name</th>
<th>Description</th>
<th>Due Date</th>
<th>Completed</th>
<th colspan="3"></th> 
</tr>
</thead>
<tbody>
<% @tasks.each do |task| %>
<tr>
<td> <%= task.name %></td>
<td> <%= task.description %></td>
<td> <%= task.due_date %></td>
<td> <%= check_box(task.completed, task, {checked: task.completed}) %></td>


<td><%= link_to 'Show', task %></td>
<td><%= link_to "Edit", edit_task_path(task) %></td>
<td><%= button_to "Distroy", task, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-outline-danger" %></td>

</tr>
<% end %>


<%# <%= Time.now.strftime("%d/%m/%Y %H:%M %Z") %>

</tbody>
</table>
<%= link_to "New task", new_task_path, class:"btn btn-secondary" %>

